<Window x:Class="RecipeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Application" Height="450" Width="800">
    <Grid>
        <!-- Menu -->
        <Menu VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <!-- Add Edit menu items here -->
            </MenuItem>
            <MenuItem Header="Tools">
                <!-- Add Tools menu items here -->
            </MenuItem>
        </Menu>

        <!-- Welcome Message -->
        <TextBlock Text="Welcome to the Recipe Application!" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="24" Margin="10"/>

        <!-- Buttons -->
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Orientation="Horizontal" Margin="10">
            <Button Content="Add Recipe" Width="100" Height="30" Margin="5" Click="AddRecipe_Click"/>
            <Button Content="View Recipe List" Width="100" Height="30" Margin="5" Click="ViewRecipeList_Click"/>
        </StackPanel>
    </Grid>
</Window>
