<Window x:Class="RecipeApp.RecipeListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe List" Height="400" Width="600">
    <Grid>
        <StackPanel>
            <TextBlock Text="Recipe List" FontSize="20" Margin="10"/>
            <ListBox Name="RecipeListBox" Margin="10" SelectionChanged="RecipeListBox_SelectionChanged"/>
            <Button Content="View Recipe" Width="100" Margin="10" Click="ViewRecipe_Click"/>
            <Button Content="Delete Recipe" Width="100" Margin="10" Click="DeleteRecipe_Click"/>
            
        </StackPanel>
    </Grid>
</Window>
