<Window x:Class="RecipeApp.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Recipe" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Add New Recipe" FontSize="20" Margin="0,0,0,20"/>

            <TextBlock Text="Recipe Name:"/>
            <TextBox Name="RecipeName" Margin="0,0,0,10"/>

            <TextBlock Text="Ingredients (format: name,quantity,unit,calories,food group):"/>
            <TextBox Name="Ingredients" Margin="0,0,0,10"/>

            <TextBlock Text="Steps (one per line):"/>
            <TextBox Name="Steps" Margin="0,0,0,10"/>

            <Button Content="Save" Width="100" Height="30" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
